<div id="container">
<h2>
    <strong><%= team.name %></strong>
</h2>

<p>
    <strong>Tag:</strong>
    <%= team.shortName %>
</p>
<p>
    <strong>Colour:</strong>
    #<%= team.colour %>
        <% if (team.colour) {  %>
            <div style="width: 50px; height:50px; background-color: <%= team.colour%>;"></div>
            <% } %>
</p>
<p>
    <strong>Owned stations:</strong>
    <%= team.captured_stations.join(',') %>
</p>
<p>
    <strong>Score:</strong>
    <%= team.score %>
</p>

<a href="/teams/<%= team._id %>/edit">Edit</a> |
